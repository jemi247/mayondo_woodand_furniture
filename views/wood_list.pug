extends layout
block content
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width')
    title Registered Wood Stock
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  header
    h1 Wood Stock List
    <table class="table table-success table-striped-columns">
      thead 
          tr
          th Wood Type 
          th Quantity 
          th Supplier 
          th Date Received 
          th Update 
          th Delete
      tbody 
        if woodStock.length > 0
          each item in woodStock
            tr 
              td #{item.woodType}
              td #{item.quantity}
              td #{item.supplier}
              td #{item.dateReceived}
               td 
                a.btn.btn_primary.btn_block(href=`/wood/${item._id}`) Update
              td 
                form(action="/deleteWood" method="POST")
                  input(type="hidden" name="id" value=item._id)
                  button.btn.btn_danger.btn_block(type="submit") Delete
    </table>
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous")
