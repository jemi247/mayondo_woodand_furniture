extends layout 
block content
  head
    meta(charset='UTF-8')
    title Update Furniture Stock
    link(rel='stylesheet' href='/css/furniture.css')
  header
    h1 Update Furniture Stock
  section
    form(action="/furniture?id="+item._id method='POST')
      label Furniture Type:
      input(type='text' name='furniture' value=item.name  placeholder='e.g. Sofa Set' required='')
      label Material:
      input(type='text' name='material' placeholder='e.g. Oak' required='')
      label Quantity:
      input(type='number' name='quantity' required='')
      label Price:
      input(type='number' name='price' step='0.01' required='')
      button(type='submit') Update Furniture
  //- script(src='js/mayondo.js')