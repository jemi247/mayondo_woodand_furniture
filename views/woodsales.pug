extends layout
block content
head
meta(charset='UTF-8')
title Wood Sales
link(rel="stylesheet", href="wood.css")
header
h1 Wood Sales | Mayondo Wood and Furniture
  section
    form(action='' method='POST')
      if woodItems.length 
        label Customer Name:
        input(type='text' name='customerName' placeholder='e.g. Mahogany' required='')
        label Wood Type:
        input(type='text' name='woodType' required='')
          select(name='paymentType' required='')
            option Hardwood
            option Softwood
            option Timber 
            option Poles
        label Quantity:
        input(type='number' name='quantity' required='')
        label Sale Date:
        input(type='date' name='saleDate' required='')
        label Payment Type 
          select(name='paymentType' required='')
            option Cash
            option Cheque 
            option Bank overdraft
        label Sales Agent Name 
        input(type='text' name='agentName' required='')
      button(type='submit') Register Wood Sale




 