extends layout 
block content
  head
    meta(charset='UTF-8')
    title Register Wood Stock
    link(rel='stylesheet' href='/css/wood.css')
  header
    h1 Register Wood Stock
  section
    form(action='/register_wood' method='POST')
      label Wood Name:
      select(name="woodName" required='')
        option(value='' disabled='' selected='') Select Wood Name
        option(value='mahogany') Mahogany
        option(value='acacia') Acacia
        option(value='oak') Oak
        option(value='pine') Pine
        option(value='douglas fir') Douglas Fir 
        option(value='spruce') Spruce 
        option(value='mvule') Mvule
        option(value='eucalyptus') Eucalyptus
      label Wood Type:
      select(name="woodType")
        option(value='' disabled='' selected='') Select Wood Type
        option(value='hardwood') Hardwood
        option(value='softwood') Softwood
        option(value='timber') Timber 
        option(value='poles') Poles
      label Quantity (in logs):
      input(type='number' name='quantity' required='')
      label Supplier:
      input(type='text' name='supplier' required='')
      label Cost Price (per log):
      input(type='number' name='unitPrice' required='')  
      label Date Received:
      input(type='date' name='dateReceived' required='')
      label Sale Price (per log):
      input(type="number" name="salePrice" required='')
      button(type='submit') Register Wood Stock
  script(src='/js/mayondo.js')
